---
import {
  Facebook,
  Instagram,
  Twitter,
  Linkedin,
  Youtube,
  Mail,
  MapPin,
  Phone,
  Heart,
} from "@lucide/astro";
---

<footer class="relative bg-primary overflow-hidden">
  <div class="relative z-10 container mx-auto px-4 md:px-6 pt-16 pb-8">
    <!-- Sección superior del footer -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Logo y descripción - Semántica section -->
      <section class="lg:col-span-1">
        <!-- Brand Identity -->
        <div class="flex items-center gap-4 mb-4" role="banner">
          <img
            src="/miranti/icon.svg"
            alt="Logo de Miranti"
            class="h-10 w-10"
            width="40"
            height="40"
          />
          <img
            src="/miranti/name.svg"
            alt="Miranti"
            class="h-8"
            width="120"
            height="32"
          />
        </div>

        <!-- Company Description -->
        <p class="text-white/80 mb-4 text-sm md:text-base">
          Conectamos artesanos peruanos con el mundo digital, facilitando la
          creación de catálogos y el acceso al comercio electrónico.
        </p>

        <!-- Social Media Links -->
        <nav class="flex gap-4 mt-6" aria-label="Redes sociales">
          <a
            href="#"
            class="bg-white/10 p-2 rounded-full hover:bg-white/20 transition-colors ring-1 ring-white/30"
            aria-label="Facebook de Miranti"
          >
            <Facebook size={20} stroke-width={2} class="text-white" />
          </a>
          <a
            href="#"
            class="bg-white/10 p-2 rounded-full hover:bg-white/20 transition-colors ring-1 ring-white/30"
            aria-label="Instagram de Miranti"
          >
            <Instagram size={20} stroke-width={2} class="text-white" />
          </a>
          <a
            href="#"
            class="bg-white/10 p-2 rounded-full hover:bg-white/20 transition-colors ring-1 ring-white/30"
            aria-label="Twitter de Miranti"
          >
            <Twitter size={20} stroke-width={2} class="text-white" />
          </a>
          <a
            href="#"
            class="bg-white/10 p-2 rounded-full hover:bg-white/20 transition-colors ring-1 ring-white/30"
            aria-label="LinkedIn de Miranti"
          >
            <Linkedin size={20} stroke-width={2} class="text-white" />
          </a>
          <a
            href="#"
            class="bg-white/10 p-2 rounded-full hover:bg-white/20 transition-colors ring-1 ring-white/30"
            aria-label="Canal de YouTube de Miranti"
          >
            <Youtube size={20} stroke-width={2} class="text-white" />
          </a>
        </nav>
      </section>

      <!-- Enlaces rápidos - Semántica nav -->
      <nav aria-labelledby="enlaces-rapidos">
        <h2 id="enlaces-rapidos" class="text-white font-serif text-xl mb-6">
          Enlaces Rápidos
        </h2>
        <ul class="space-y-3">
          <li>
            <a
              href="#"
              class="text-white/70 hover:text-secondary transition-colors hover:underline focus:outline-none focus:ring-2 focus:ring-secondary/70"
              >Inicio</a
            >
          </li>
          <li>
            <a
              href="#quees"
              class="text-white/70 hover:text-secondary transition-colors hover:underline focus:outline-none focus:ring-2 focus:ring-secondary/70"
              >¿Qué es Miranti?</a
            >
          </li>
          <li>
            <a
              href="#comofunciona"
              class="text-white/70 hover:text-secondary transition-colors hover:underline focus:outline-none focus:ring-2 focus:ring-secondary/70"
              >Cómo Funciona</a
            >
          </li>
          <li>
            <a
              href="#"
              class="text-white/70 hover:text-secondary transition-colors hover:underline focus:outline-none focus:ring-2 focus:ring-secondary/70"
              >Testimonios</a
            >
          </li>
          <li>
            <a
              href="#"
              class="text-white/70 hover:text-secondary transition-colors hover:underline focus:outline-none focus:ring-2 focus:ring-secondary/70"
              >Blog</a
            >
          </li>
        </ul>
      </nav>

      <!-- Soporte - Semántica section -->
      <section aria-labelledby="soporte">
        <h2 id="soporte" class="text-white font-serif text-xl mb-6">Soporte</h2>
        <ul class="space-y-3">
          <li>
            <a
              href="#"
              class="text-white/70 hover:text-secondary transition-colors hover:underline focus:outline-none focus:ring-2 focus:ring-secondary/70"
              >Centro de Ayuda</a
            >
          </li>
          <li>
            <a
              href="#"
              class="text-white/70 hover:text-secondary transition-colors hover:underline focus:outline-none focus:ring-2 focus:ring-secondary/70"
              >Tutoriales</a
            >
          </li>
          <li>
            <a
              href="#"
              class="text-white/70 hover:text-secondary transition-colors hover:underline focus:outline-none focus:ring-2 focus:ring-secondary/70"
              >Preguntas Frecuentes</a
            >
          </li>
          <li>
            <a
              href="#"
              class="text-white/70 hover:text-secondary transition-colors hover:underline focus:outline-none focus:ring-2 focus:ring-secondary/70"
              >Recursos</a
            >
          </li>
          <li>
            <a
              href="#"
              class="text-white/70 hover:text-secondary transition-colors hover:underline focus:outline-none focus:ring-2 focus:ring-secondary/70"
              >Contacto</a
            >
          </li>
        </ul>
      </section>

      <!-- Contacto - Semántica address -->
      <section aria-labelledby="contacto">
        <h2 id="contacto" class="text-white font-serif text-xl mb-6">
          Contacto
        </h2>
        <address class="not-italic">
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <MapPin
                size={18}
                stroke-width={2}
                class="text-secondary mt-1 flex-shrink-0"
                aria-hidden="true"
              />
              <span class="text-white/70">Av. La Cultura 2715, Cusco, Perú</span
              >
            </li>
            <li class="flex items-center gap-3">
              <Phone
                size={18}
                stroke-width={2}
                class="text-secondary flex-shrink-0"
                aria-hidden="true"
              />
              <a
                href="tel:+51984123456"
                class="text-white/70 hover:text-secondary transition-colors"
                >+51 984 123 456</a
              >
            </li>
            <li class="flex items-center gap-3">
              <Mail
                size={18}
                stroke-width={2}
                class="text-secondary flex-shrink-0"
                aria-hidden="true"
              />
              <a
                href="mailto:contacto@miranti.pe"
                class="text-white/70 hover:text-secondary transition-colors"
                >contacto@miranti.pe</a
              >
            </li>
          </ul>
        </address>
      </section>
    </div>

    <!-- Línea divisoria con efecto glasmórfico -->
    <div class="w-full h-px bg-white/20 my-8" role="separator"></div>

    <!-- Sección inferior del footer -->
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <small class="text-white/60 text-sm">
        © {new Date().getFullYear()} Miranti. Todos los derechos reservados.
      </small>

      <nav class="flex gap-6" aria-label="Legal">
        <a
          href="#"
          class="text-white/60 hover:text-white text-sm transition-colors hover:underline focus:outline-none focus:ring-2 focus:ring-white/40"
          >Términos y Condiciones</a
        >
        <a
          href="#"
          class="text-white/60 hover:text-white text-sm transition-colors hover:underline focus:outline-none focus:ring-2 focus:ring-white/40"
          >Política de Privacidad</a
        >
        <a
          href="#"
          class="text-white/60 hover:text-white text-sm transition-colors hover:underline focus:outline-none focus:ring-2 focus:ring-white/40"
          >Cookies</a
        >
      </nav>
    </div>

    <!-- Mensaje final -->
    <div class="text-center mt-10">
      <small
        class="text-white/60 flex items-center justify-center gap-2 text-sm"
      >
        <span>Hecho con</span>
        <Heart
          size={14}
          stroke-width={2.5}
          class="text-red-500 animate-pulse fill-red-500"
          aria-hidden="true"
        />
        <span>en Perú</span>
      </small>
    </div>
  </div>
</footer>
