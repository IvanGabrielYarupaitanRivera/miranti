---
import { Menu, X, HelpCircle, Settings, MessageCircle } from "@lucide/astro";
---

<header class="fixed top-4 left-0 right-0 z-50 mx-auto w-full max-w-7xl px-4">
  <nav
    class="bg-black/70 backdrop-blur-md rounded-full border border-white/20 shadow-lg ring-1 ring-white/30 flex items-center justify-between py-3 px-4 md:px-6"
  >
    <!-- Logo -->

    <a href="/" class="flex items-center">
      <img src="/miranti/icon.svg" alt="Miranti" class="h-10" />
    </a>

    <!-- Menú desktop -->
    <div class="hidden lg:flex items-center gap-2 lg:gap-4">
      <a
        href="#quees"
        class="text-white hover:text-secondary px-3 py-2 rounded-full transition-colors"
      >
        ¿Qué es Miranti?
      </a>
      <a
        href="#comofunciona"
        class="text-white hover:text-secondary px-3 py-2 rounded-full transition-colors"
      >
        Cómo Funciona
      </a>
      <a
        href="#testimonios"
        class="text-white hover:text-secondary px-3 py-2 rounded-full transition-colors"
      >
        Testimonios
      </a>
      <a
        href="#unete"
        class="bg-secondary/90 hover:bg-secondary text-primary font-medium px-5 py-2 rounded-full transition-all shadow-md hover:shadow-lg border border-white/20"
      >
        Únete a Miranti
      </a>
    </div>

    <!-- Menú móvil - Botón toggle -->
    <button
      id="menu-toggle"
      class="lg:hidden text-white p-2 rounded-full hover:bg-white/10 transition-colors"
    >
      <Menu size={24} stroke-width={2} />
    </button>
  </nav>

  <!-- Menú móvil - Contenido expandible -->
  <div
    id="mobile-menu"
    class="hidden lg:hidden absolute top-full left-0 right-0 mt-3 mx-4 overflow-hidden"
  >
    <div
      class="bg-black/70 backdrop-blur-md rounded-4xl border border-white/20 shadow-xl ring-1 ring-white/30 p-5 transform transition-all duration-300"
    >
      <!-- Encabezado del menú -->
      <div
        class="flex justify-between items-center pb-3 border-b border-white/10"
      >
        <h3 class="text-white font-medium flex items-center gap-2">
          <span>Menú</span>
        </h3>
        <button
          id="menu-close"
          class="text-white p-2 rounded-full hover:bg-white/10 active:bg-white/20 transition-colors"
        >
          <X size={20} stroke-width={2} />
        </button>
      </div>

      <!-- Enlaces de navegación -->
      <div class="flex flex-col gap-2 mt-3">
        <a
          href="#quees"
          class="text-white hover:bg-white/10 active:bg-white/15 px-4 py-3 rounded-xl transition-all flex items-center gap-3"
        >
          <div
            class="w-8 h-8 rounded-full bg-white/10 flex items-center justify-center"
          >
            <HelpCircle size={18} stroke-width={2} class="text-secondary" />
          </div>
          <span>¿Qué es Miranti?</span>
        </a>

        <a
          href="#comofunciona"
          class="text-white hover:bg-white/10 active:bg-white/15 px-4 py-3 rounded-xl transition-all flex items-center gap-3"
        >
          <div
            class="w-8 h-8 rounded-full bg-white/10 flex items-center justify-center"
          >
            <Settings size={18} stroke-width={2} class="text-secondary" />
          </div>
          <span>Cómo Funciona</span>
        </a>

        <a
          href="#testimonios"
          class="text-white hover:bg-white/10 active:bg-white/15 px-4 py-3 rounded-xl transition-all flex items-center gap-3"
        >
          <div
            class="w-8 h-8 rounded-full bg-white/10 flex items-center justify-center"
          >
            <MessageCircle size={18} stroke-width={2} class="text-secondary" />
          </div>
          <span>Testimonios</span>
        </a>
      </div>

      <!-- CTA - Botón destacado -->
      <div class="mt-5 pt-4 border-t border-white/10 w-full flex">
        <a
          href="#unete"
          class="bg-secondary/90 hover:bg-secondary text-primary font-medium px-5 py-2 rounded-full transition-all shadow-md hover:shadow-lg border border-white/20 w-full my-2 text-center"
        >
          <span>Únete a Miranti</span>
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const menuToggle = document.getElementById("menu-toggle");
    const menuClose = document.getElementById("menu-close");
    const mobileMenu = document.getElementById("mobile-menu");

    menuToggle?.addEventListener("click", () => {
      mobileMenu?.classList.toggle("hidden");
    });

    menuClose?.addEventListener("click", () => {
      mobileMenu?.classList.add("hidden");
    });
  });
</script>
